<% include partials/head1.ejs %>

<body>

    <header>
        <% include partials/navbar.ejs %>

    </header>

    <section id="content " class="mb-5">

        <div class="content-wrap jobs-table" style="padding-bottom: 0">

            <div class="container-fluid clearfix p-2">

                <div class="table-responsive">
                    <h2>Jobs Listed</h2>
                    <table id="datatable1" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Job Title</th>
                                <th>Location</th>
                                <th>Salary</th>
                                <th>Start Date</th>
                                <th>Type</th>
                                <th>Profile</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                           <% if(job){ %>


                            <% job.map(job => { %>
                            <tr>
                                <td><%=job.job_title%>
                                </td>
                                <td><%=job.job_location%></td>
                                <td><%=job.job_salary%></td>
                                <td><%=job.start_date%></td>
                                <td><%=job.job_type%></td>
                                <td class="d-flex"><a href="/jobs-single<%=job.id%>">View</a> / <a
                                        href="/edit-jobs<%=job.id%>">Edit</a>
                                </td>

                                <td>
                                        <form style="margin:0" action="/deletejob<%=job.id%>" method="post">
                                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                        </form>
                                    </td>

                            </tr>
                            <% }) %>
                      <%  }  %>
                        </tbody>
                    </table>
                </div>

            </div>

        </div>


        <div class="content-wrap jobs-table">

            <div class="container-fluid clearfix p-2">

                <div class="table-responsive">
                    <h2>Blogs Listed</h2>
                    <table id="datatable2" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Post Title</th>
                                <th>Tagline</th>
                                <th>Date</th>
                                <th>Profile</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% blog.map(blog => { %>
                            <tr>
                                <td><%=blog.post_title%>
                                </td>
                                <td><%=blog.post_title2%></td>
                                <td><%=blog.post_create_date%></td>
                                <td><a href="/blog_<%=blog.id%>">View</a> / <a href="/blog-edit<%=blog.id%>">Edit</a>
                                </td>

                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

            </div>

        </div>


    </section>


    <% include partials/footer.ejs %>



    <% include partials/scripts.ejs %>

    <script src="js/components/bs-datatable.js"></script>



    <script>

        $(document).ready(function () {
            $('#datatable1').dataTable();
            $('#datatable2').dataTable();
        });

    </script>



</body>