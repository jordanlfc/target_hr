<% include partials/head1.ejs %>

<body>

    <header>
        <% include partials/navbar.ejs %>

    </header>


    <section id="jobs-image-section" style="background-image: url(images/img5.jpg); height:40vh">
        <div class="layer">
            </div>

    </section>

    <section id="content " class="mb-5">

        <div class="content-wrap jobs-table">

            <div class="container-fluid clearfix p-5">

                <div class="table-responsive">
                    <table id="datatable1" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Job Title</th>
                                <th>Location</th>
                                <th>Salary</th>
                                <th>Start Date</th>
                                <th>Type</th>
                                <th>Profile</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% job.map(job => { %>
                            <tr>
                                <td><%=job.job_title%>
                                </td>
                                <td><%=job.job_location%></td>
                                <td><%=job.job_salary%></td>
                                <td><%=job.start_date%></td>
                                <td><%=job.job_type%></td>
                                <td><a href="/jobs-single<%=job.id%>">View</td>
                            </tr>
                        <% }) %> 
                        </tbody>
                    </table>
                </div>

            </div>

        </div>

    </section>



    <% include partials/scripts.ejs %>

    <script src="js/components/bs-datatable.js"></script>



    <script>

        $(document).ready(function () {
            $('#datatable1').dataTable();
        });

    </script>

</body>