<% include partials/head1.ejs %>

<body>

    <header>
        <% include partials/navbar.ejs %>

    </header>

    <section>
        <!-- Content
		============================================= -->
        <section id="content" style="overflow: visible; min-height: 100vh;">

            <div class="content-wrap nobottompadding">

                <div class="container clearfix">

                    <div class="row clearfix">


                        <%   blogs.map(blog => {  %>

                        <div class="col-lg-4 col-sm-6 bottommargin-sm">
                            <div class="ipost clearfix">
                                <div class="entry">
                                    <% if(blog.picture_path){ %>
                                    <div class="entry-image nobottommargin">
                                        <a href="/blog_<%=blog.id%>" data-lightbox="image"><img class="image_fade"
                                                src="<%=blog.picture_path.slice(6)%>" alt="Image 1"></a>

                                    </div>
                                    <%  }  %>
                                    <div class="entry-title">
                                        <ul class="entry-meta clearfix">
                                            <li class="date-of"><%=blog.post_create_date%></li>
                                            <% if(blog.video_path){ %>
                                            <li><a href="#">Video</a></li>
                                            <% } %>
                                        </ul>
                                        <div class="clear"></div>
                                        <h2 class="nobottommargin"><a href="/blog_<%=blog.id%>"><%=blog.post_title%></a>
                                        </h2>
                                        <h5><%=blog.post_title2%></h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <%  })  %>
                    </div>
                </div>


            </div>

            <div
                style="position: absolute; bottom: 0; left: 0; width: 100%; z-index: 3; background: url('images/sketch-header.png') repeat center bottom; background-size: auto 100%; height: 40px; margin-bottom: -10px;">
            </div>

        </section><!-- #content end -->
    </section>

    <% include partials/footer %>
    <% include partials/scripts %>

    <script>

        let dateChange = Array.from(document.querySelectorAll('.date-of'))

        function changer(x) {
            for (var i = 0; i < x.length; i++) {
                x[i].innerText = x[i].innerText.slice(0, 15)
            }
            return x
        }

        changer(dateChange)


    </script>

</body>